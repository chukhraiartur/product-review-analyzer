# Application settings
APP_NAME=Product Review Analyzer
DEBUG=false

# Database settings - PostgreSQL (all required)
# Use 'host.docker.internal' on Windows when connecting to Docker container
# Use 'localhost' on Linux/Mac or when PostgreSQL is installed locally
# Note: If you have local PostgreSQL installed, change DB_PORT to 5433 to avoid conflicts
DB_HOST=localhost
DB_PORT=5433
DB_USER=review_user
DB_PASSWORD=review_password
DB_NAME=review_analyzer

# Legacy database URL (optional - if provided, will override individual components)
# DATABASE_URL=postgresql://review_user:review_password@localhost:5432/review_analyzer

# OpenAI settings (required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Google Cloud Storage settings
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=your-gcp-bucket-name
GCP_CREDENTIALS_PATH=./credentials/gcp-credentials.json

# Vector database settings (required)
FAISS_INDEX_PATH=./data/faiss_index

# Scraping settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# API settings (required)
API_HOST=0.0.0.0
API_PORT=8000 